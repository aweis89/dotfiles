{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "yet-another-opencode-cursor-auth"
  ],
  "mcp": {
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    }
  },
  "theme": "gruvbox",
  "autoupdate": true,
  "share": "disabled",
  "model": "{env:OPENCODE_MODEL}",
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "webfetch": "allow",
    "question": "deny"
  },
  "keybinds": {
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "session_child_cycle": "ctrl+l",
    "session_child_cycle_reverse": "ctrl+h"
  },
  "command": {
    "commit-staged": {
      "template": "Analyze staged changes and create a commit following conventional commit format (type(scope): description). Common types: feat, fix, refactor, docs, style, test, chore. Keep subject under 50 chars. Create the commit and output only the final commit message.",
      "agent": "build",
      "description": "Generate commit message for staged changes"
    }
  },
  "provider": {
    "cursor": {
      "name": "Cursor"
    },
  }
}
